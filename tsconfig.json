    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "lib",
        "allowJs": true,
        "module": "CommonJS",
        "target": "ES2015",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "watch": false,
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}